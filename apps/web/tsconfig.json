{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"declaration": false,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"target": "es5",
		"paths": {
			"@/*": ["src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"/home/kacper/Documents/Programming/microsoft-teams-clone/apps/web/.next/types/**/*.ts"
	]
}
