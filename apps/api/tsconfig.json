{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"module": "commonjs",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"outDir": "dist",
		"removeComments": true,
		"sourceMap": true,
		"strict": false,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"target": "es2017",
		"paths": {
			"@/*": ["src/*"]
		}
	}
}
